---
const { title, image, description } = Astro.props;
import { Image } from "astro:assets";
---

<div class="rounded-lg p-6 transition-shadow duration-300">
    <h2 class="text-center text-2xl font-bold mb-2">{title}</h2>
    <div class="flex justify-center items-center">
    <Image src={image} alt="" class="w-full h-full rounded-full m-4" />
    </div>
    <p class="text-gray-700 mb-4">{description}</p>
</div>
