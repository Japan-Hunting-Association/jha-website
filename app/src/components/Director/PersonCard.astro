---
const { name, sns, icon, role, description,} = Astro.props;
import { Image } from 'astro:assets';
---

<div class="bg-gray-100 rounded-lg overflow-hidden shadow-lg flex">
    <div class="w-1/4 flex item-center">
        <Image
            class="aspect-square object-cover"
            src={ icon }
            alt="Person Image"
        />
    </div>
    <div class="w-3/4 p-6">
        <h2 class="text-2xl font-bold mb-2">
            <a href={ sns } class="text-blue-500 hover:underline" target="_blank">{ name }</a>
        </h2>
        <p class="text-gray-700 mb-4">{ role }</p>
        <p class="text-gray-600">
            { description }
        </p>
    </div>
</div>
